# Copy to .env before running docker compose.

# Shared store (backend + ingestor)
DASHBOARD_DATABASE_URL=postgresql://ego:ego@db:5432/ego_dashboard
DASHBOARD_REDIS_URL=redis://redis:6379/0

# Ingestor source JSONL path (mounted into the ingestor container)
DASHBOARD_LOG_PATH=/var/log/ego-mcp/telemetry.jsonl
DASHBOARD_INGEST_POLL_SECONDS=1.0

# Browser-facing frontend endpoints (use localhost because requests originate from the host browser)
VITE_DASHBOARD_API_BASE=http://localhost:8000
VITE_DASHBOARD_WS_BASE=ws://localhost:8000
